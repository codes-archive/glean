{
  "name": "@glean/web",
  "version": "0.1.0",
  "description": "Glean - Personal Knowledge Management and RSS Reader",
  "author": "Leslie Leung",
  "private": true,
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "vite --mode electron",
    "build": "tsc && vite build",
    "build:electron": "tsc && vite build --mode electron && electron-builder",
    "build:win": "npm run build:electron -- --win",
    "build:mac": "npm run build:electron -- --mac",
    "build:linux": "npm run build:electron -- --linux",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist dist-electron release node_modules .turbo"
  },
  "dependencies": {
    "@glean/api-client": "workspace:*",
    "@glean/types": "workspace:*",
    "@glean/ui": "workspace:*",
    "@hookform/resolvers": "^5.0.0",
    "@tanstack/react-query": "^5.24.0",
    "axios": "^1.6.0",
    "clsx": "^2.1.0",
    "date-fns": "^4.0.0",
    "electron-store": "^11.0.2",
    "highlight.js": "^11.11.1",
    "lightgallery": "^2.9.0",
    "lucide-react": "^0.561.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.50.0",
    "react-router-dom": "^7.0.0",
    "tailwind-merge": "^3.0.0",
    "zod": "^4.0.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/typography": "^0.5.19",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react-swc": "^4.0.0",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.3.0",
    "vite": "^7.0.0",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  }
}
